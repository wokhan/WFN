<Page x:Class="Wokhan.WindowsFirewallNotifier.Console.UI.Pages.Connections"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      DataContext="{Binding RelativeSource={RelativeSource Self}}"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="800"
	Title="Connections">
    <DockPanel>
        <Border Padding="5" DockPanel.Dock="Top">
            <Grid Style="{StaticResource ToolBarPanel}">
                <WrapPanel HorizontalAlignment="Left">
                    <Button IsEnabled="False" x:Name="btnStart" Click="btnStart_Click">
                        <Grid>
                            <Image Source="/WFN;component/Resources/Images/btnConnTrack.Image.png" HorizontalAlignment="Left" Height="16"/>
                            <TextBlock Margin="20,0,0,0" Text="Start tracking" />
                        </Grid>
                    </Button>
                    <Button x:Name="btnStop" Click="btnStop_Click">
                        <Grid>
                            <Image Source="/WFN;component/Resources/Images/btnConnStop.Image.png" HorizontalAlignment="Left" Height="16"/>
                            <TextBlock Margin="20,0,0,0" Text="Stop tracking" />
                        </Grid>
                    </Button>
                    <TextBlock VerticalAlignment="Center" Text="{Binding connectionsView.Count, StringFormat='Active connection(s): {0}', FallbackValue='No active connection'}" />
                </WrapPanel>
                <WrapPanel HorizontalAlignment="Right">
                    <Image Source="/WFN;component/Resources/Images/stripConnUpdSpeed.Image.png" Height="16"/>
                    <Label Content="Update rate:" HorizontalAlignment="Right" />
                    <ComboBox IsEditable="False" HorizontalAlignment="Right" Width="70" ItemsSource="{Binding Intervals, StringFormat='\{0\}s'}" SelectedValue="{Binding Interval}" />
                </WrapPanel>
            </Grid>
        </Border>
        <TextBlock Style="{StaticResource InfoBlock}" DockPanel.Dock="Bottom" TextWrapping="Wrap">This screen displays all active connections on this computer, updated every second (by default).
Closed connections (in orange) will remain displayed a few seconds before disappearing.</TextBlock>
        <DataGrid GridLinesVisibility="All" SelectionMode="Single" IsReadOnly="True" ColumnWidth="*" ItemsSource="{Binding connectionsView}" AutoGenerateColumns="False" HeadersVisibility="Column">
            <DataGrid.GroupStyle>
                <GroupStyle>
                    <GroupStyle.ContainerStyle>
                        <Style TargetType="{x:Type GroupItem}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type GroupItem}">
                                        <StackPanel>
                                            <DataGridCell BorderThickness="0,0,0,2" BorderBrush="Gray" Margin="0" Background="WhiteSmoke" Padding="5">
                                                <Grid DataContext="{Binding Items[0]}" Height="25">
                                                    <Image Source="{Binding Icon}" Width="16" Height="16" VerticalAlignment="Center" HorizontalAlignment="Left" />
                                                    <TextBlock Margin="20,0,0,0" FontWeight="Bold" Text="{Binding GroupKey}" HorizontalAlignment="Left" VerticalAlignment="Center" />
                                                </Grid>
                                            </DataGridCell>
                                            <ItemsPresenter />
                                        </StackPanel>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupStyle.ContainerStyle>
                    <GroupStyle.Panel>
                        <ItemsPanelTemplate>
                            <DataGridRowsPresenter/>
                        </ItemsPanelTemplate>
                    </GroupStyle.Panel>
                </GroupStyle>
            </DataGrid.GroupStyle>
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsDying}" Value="True">
                            <Setter Property="Background" Value="Orange" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsNew}" Value="True">
                            <Setter Property="Background" Value="LightBlue" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Owner" Binding="{Binding Owner, Mode=OneWay}" />
                <DataGridTextColumn Header="Protocol" Binding="{Binding Protocol, Mode=OneWay}" />
                <DataGridTextColumn Header="LocalAddress" Binding="{Binding LocalAddress, Mode=OneWay}" />
                <DataGridTextColumn Header="LocalPort" Binding="{Binding LocalPort, Mode=OneWay}" />
                <DataGridTextColumn Header="RemoteAddress" Binding="{Binding RemoteAddress, Mode=OneWay}" />
                <DataGridTextColumn Header="RemotePort" Binding="{Binding RemotePort, Mode=OneWay}" />
                <DataGridTextColumn Header="State" Binding="{Binding State, Mode=OneWay}" />
                <DataGridTextColumn Header="CreationTime" Binding="{Binding CreationTime, Mode=OneWay}" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Page>
